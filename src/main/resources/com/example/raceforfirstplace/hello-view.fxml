<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: coral;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example.raceforfirstplace.savingCalcApplication">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label> Welcome to the calc</Label>
    <Label style="-fx-font-style: Comic Sans MS;">Item you wanna buy:</Label>
    <TextField fx:id="txtItem" style="-fx-border-color: white;" />
    <Label>Item cost:</Label>
    <TextField fx:id="itemCost" style="-fx-border-color: white;" />
    <Label>Number of months</Label>
    <TextField fx:id="numMonths" style="-fx-border-color: white;" />
    <Label fx:id="calcText" />






    <Button onAction="#onHelloButtonClick" style="-fx-border-color: white;" text="Calculate!" />
</VBox>
